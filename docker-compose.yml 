version: '3.0'

services:
  lembot:
    image: lem/lembot
    restart: always
    tty: true
    config_file: example.config.yml
    depends_on:
      - db
    networks:
      - lembot

  db:
    image: mariadb
    restart: always
    volumes:
      - ./data/mariadb:/var/lib/mysql
    networks:
      - lembot
networks:
  lembot: